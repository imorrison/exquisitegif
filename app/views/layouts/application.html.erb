  <body>

    <div class="row">
      <div class="large-12 columns">
        <div class='navbar right'>
          <ul class='button-group'>

            <% if user_signed_in? %>
              <!-- <li>Logged in as <%= current_user.email %>.</li> -->
              <li><a href="/#gifs/1" class="button">Gifs</a></li>
              <li><%= link_to 'Collaborations', "#collaborations/1", class: 'button' %></li>
              <li><a href="#animations/new" class='button'>New Gif</a></li>
              <li><%= link_to 'Edit profile', edit_user_registration_path, class: 'button' %></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'button' %></li>
            <% else %>
              <li><%= link_to "Sign up", new_user_registration_path, class: 'button' %></li> 
              <li><%= link_to "Login", new_user_session_path, class: 'button' %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>   
